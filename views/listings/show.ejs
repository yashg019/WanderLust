<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3"> 
    <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
         <img class="card-img-top show-img" src="<%=listing.image%>" alt="listing_image">
    <div class="card-body">
    <p class="card-text">
    <b><%=listing.title%></b> <br>
    <%=listing.description%> <br>
    &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
    <%=listing.location%> <br>
    <%=listing.country%>
    </p>
  </div>
    </div>

<div class="btns mt-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 offset-3 edit-btn">Edit</a>
     
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <BUTTON class="btn btn-dark offset-5">Delete</BUTTON></form>
        
    </div>
    </div>
    
    <br> <br>
